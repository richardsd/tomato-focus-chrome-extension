{
  "manifest_version": 3,
  "name": "Pomodoro Timer",
  "version": "1.0.4",
  "description": "A configurable Pomodoro timer to boost productivity",
  "permissions": ["notifications", "storage", "alarms"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
